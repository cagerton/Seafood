osx:
    # where applications get installed
    applications: /Applications/
    # http://www.ewal.net/2012/09/09/slow-wake-for-macbook-pro-retina/
    # "Fixing" Slow Wake for MacBook Pro w/ Retina Display and MacBook Air
    standby_delay: 86400 # seconds
    power_management:
        display_sleep: 60 # minutes
        computer_sleep: 75 # minutes
